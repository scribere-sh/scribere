{
	"name": "@scribere/app",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"fmt": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"prepare": "svelte-kit sync || echo ''",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply DB --local",
		"db:migrate:break-prod": "wrangler d1 migrations apply DB --remote",
		"db:migrate:preview": "wrangler d1 migrations apply DB --remote --preview"
	},
	"packageManager": "pnpm@10.5.0",
	"engines": {
		"node": "23.8.0"
	},
	"dependencies": {
		"@scribere/ui": "workspace:*",
		"@kitql/helpers": "^0.8",
		"@tanstack/svelte-query": "^5",
		"@tanstack/svelte-query-devtools": "^5",
		"@trpc/client": "^10",
		"devalue": "^5",
		"drizzle-orm": "^0.40",
		"superjson": "^2",
		"trpc-sveltekit": "^3",
		"trpc-svelte-query-adapter": "^2",
		"ulid": "^2",
		"zod": "^3"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250224.0",
		"@scribere/eslint-config": "workspace:*",
		"@scribere/prettier-config": "workspace:*",
		"@scribere/typescript-config": "workspace:*",
		"@scribere/email": "workspace:*",
		"@sveltejs/adapter-cloudflare": "^5",
		"@sveltejs/kit": "^2",
		"@sveltejs/vite-plugin-svelte": "^5",
		"@trpc/server": "^10",
		"autoprefixer": "^10",
		"drizzle-kit": "^0.30",
		"eslint": "^9",
		"prettier": "^3",
		"prettier-plugin-svelte": "^3",
		"prettier-plugin-tailwindcss": "^0.6",
		"svelte": "^5",
		"svelte-check": "^4",
		"tailwindcss": "^3",
		"typescript": "^5",
		"vite": "^6",
		"vite-plugin-kit-routes": "^0.8",
		"wrangler": "^3"
	}
