{
	"name": "@scribere/ui",
	"private": true,
	"scripts": {
		"dev": "svelte-package --watch",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"sync": "svelte-kit sync",
		"fmt": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"files": [
		"dist",
		"tailwind.config.ts",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	"exports": {
		"./*": {
			"types": "./dist/components/ui/*/index.d.ts",
			"svelte": "./dist/components/ui/*/index.js",
			"default": "./dist/components/ui/*/index.js"
		},
		"./utils": {
			"types": "./dist/utils.d.ts",
			"default": "./dist/utils.js"
		},
		"./css": {
			"default": "./dist/app.pcss"
		},
		"./tailwind.config": {
			"default": "./tailwind.config.ts"
		}
	},
	"peerDependencies": {
		"svelte": "^5"
	},
	"devDependencies": {
		"@scribere/eslint-config": "workspace:*",
		"@scribere/prettier-config": "workspace:*",
		"@scribere/typescript-config": "workspace:*",
		"@sveltejs/adapter-auto": "^4",
		"@sveltejs/kit": "^2",
		"@sveltejs/package": "^2",
		"@sveltejs/vite-plugin-svelte": "^5",
		"autoprefixer": "^10",
		"bits-ui": "^1.3.4",
		"clsx": "^2",
		"eslint": "^9",
		"lucide-svelte": "^0.476.0",
		"paneforge": "1.0.0-next.4",
		"prettier": "^3",
		"prettier-plugin-svelte": "^3",
		"prettier-plugin-tailwindcss": "^0.6",
		"publint": "^0.3",
		"svelte-check": "^4",
		"tailwind-merge": "^2",
		"tailwind-variants": "^0.3",
		"tailwindcss": "^3",
		"tailwindcss-animate": "^1",
		"typescript": "^5",
		"typescript-eslint": "^8",
		"vite": "^6"
	}
}
