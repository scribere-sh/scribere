{
	"name": "@scribere/ui",
	"private": true,
	"scripts": {
		"dev": "svelte-package --watch",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"sync": "svelte-kit sync",
		"fmt": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"type": "module",
	"files": [
		"dist",
		"tailwind.config.ts",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"exports": {
		"./*": {
			"types": "./dist/components/ui/*/index.d.ts",
			"svelte": "./dist/components/ui/*/index.js",
			"default": "./dist/components/ui/*/index.js"
		},
		"./utils": {
			"types": "./dist/utils.d.ts",
			"default": "./dist/utils.js"
		},
		"./css": {
			"default": "./dist/app.pcss"
		},
		"./tailwind.config": {
			"default": "./tailwind.config.ts"
		}
	},
	"peerDependencies": {
		"svelte": "5"
	},
	"devDependencies": {
		"@scribere/eslint-config": "workspace:*",
		"@scribere/prettier-config": "workspace:*",
		"@scribere/typescript-config": "workspace:*",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.19.0",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"autoprefixer": "^10.4.21",
		"bits-ui": "1.3.8",
		"clsx": "^2.1.1",
		"eslint": "^9.22.0",
		"formsnap": "^2.0.0",
		"lucide-svelte": "~0.479.0",
		"mode-watcher": "^0.5.1",
		"paneforge": "1.0.0-next.4",
		"prettier": "^3.5.3",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "~0.6.11",
		"svelte-check": "^4.1.5",
		"svelte-sonner": "~0.3.28",
		"sveltekit-superforms": "^2.24.0",
		"tailwind-merge": "^3.0.2",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "3",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.8.2",
		"vite": "^6.2.1",
		"zod": "^3.24.2"
	}
}
