{
	"name": "@scribere/email",
	"private": true,
	"scripts": {
		"dev": "svelte-kit sync && svelte-package --watch",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"sync": "svelte-kit sync",
		"fmt": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		"./validateEmail": {
			"types": "./dist/validateEmail.d.ts",
			"default": "./dist/validateEmail.js"
		},
		"./templates/*": {
			"types": "./dist/templates/*.d.ts",
			"svelte": "./dist/templates/*.svelte",
			"default": "./dist/templates/*.js"
		}
	},
	"devDependencies": {
		"@scribere/eslint-config": "workspace:*",
		"@scribere/prettier-config": "workspace:*",
		"@scribere/typescript-config": "workspace:*",
		"@scribere/ui": "workspace:*",
		"@sveltejs/adapter-auto": "^4",
		"@sveltejs/kit": "^2",
		"@sveltejs/package": "^2",
		"@sveltejs/vite-plugin-svelte": "^5",
		"eslint": "^9",
		"prettier": "^3",
		"prettier-plugin-svelte": "^3",
		"prettier-plugin-organize-imports": "^4.1",
		"prettier-plugin-tailwindcss": "^0.6",
		"svelte-check": "^4",
		"typescript": "^5",
		"vite": "^6"
	},
	"dependencies": {
		"resend": "^4",
		"handlebars": "^4"
	}
}
