{
	"name": "@scribere/editor",
	"private": true,
	"scripts": {
		"dev": "svelte-kit sync && svelte-package --watch",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"sync": "svelte-kit sync",
		"fmt": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"type": "module",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5"
	},
	"devDependencies": {
		"@scribere/eslint-config": "workspace:*",
		"@scribere/prettier-config": "workspace:*",
		"@scribere/typescript-config": "workspace:*",
		"@scribere/ui": "workspace:*",
		"@sveltejs/adapter-auto": "^4",
		"@sveltejs/kit": "^2",
		"@sveltejs/package": "^2",
		"@sveltejs/vite-plugin-svelte": "^5",
		"eslint": "^9",
		"lucide-svelte": "^0",
		"prettier": "^3",
		"prettier-plugin-svelte": "^3",
		"prettier-plugin-tailwindcss": "^0.6",
		"svelte-check": "^4",
		"typescript": "^5",
		"vite": "^6"
	},
	"dependencies": {
		"prosemirror-model": "^1",
		"prosemirror-state": "^1",
		"prosemirror-view": "^1",
		"prosemirror-history": "^1",
		"prosemirror-keymap": "^1",
		"prosemirror-commands": "^1",
		"prosemirror-inputrules": "^1"
	}
}
