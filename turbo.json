{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalDependencies": [
        ".env", "pnpm-lock.yaml"
    ],
    "tasks": {
        "dev": {
            "persistent": true,
            "cache": false
        },
        "build": {
            "dependsOn": ["^sync", "^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"]
        },
        "lint": {
            "cache": false
        },
        "fmt": {
            "cache": false
        },
        "check": {
            "cache": false
        },
        "sync": {
            "cache": false
        }
    }
}
